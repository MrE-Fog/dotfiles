#!/usr/bin/env bash

# shttp
# Serve current directory via HTTP on port 8000

if $(which ruby) --version >/dev/null 2>&1; then
	$(which ruby) -run -e httpd . -p8000
elif $(which python3) --version >/dev/null 2>&1; then
	$(which python3) -m http.server
elif $(which python) --version >/dev/null 2>&1; then
	$(which python) -m SimpleHTTPServer
else
	echo "You don't have Ruby or Python. No HTTP server for you!" 1>&2
	return 1
fi
